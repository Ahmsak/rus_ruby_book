\newcommand{\italy}[1]{\textit{#1}}
\newcommand{\mono}[1]{\texttt{#1}}

\renewcommand{\epigraph}[2] { %
  \hfill \begin{minipage}[h]{0.75\textwidth} %
    \italy{#1} %
    \begin{flushright} \italy{#2} \end{flushright} %
  \end{minipage} \bigskip} 

% Примечания автора.
\newenvironment{note}
  {\begin{samepage} \bigskip \hrule \nopagebreak \medskip \itshape}
  {\medskip \hrule \bigskip \end{samepage}}

% Заголовок списка.
\newcommand{\itemtitle}[1]{ \bigskip \noindent #1 \smallskip}

% DRY
\newcommand{\keylisttitle}[1]{ \italy{#1} \medskip \hrule \medskip }

% Список определений в рамке.
\newenvironment{keylist}[1]
  {\begin{longtable}[l]{| p{0.97\textwidth} |} %     
    \hline \endfirsthead
    \hline \keylisttitle{#1} \endhead 
    \hline \endfoot 
    \hline \endlastfoot

    \begin{minipage}[t]{0.97\textwidth} \keylisttitle{#1} }
  { \end{minipage} 
    \\[7pt] \hline 
    \end{longtable} }

% {minipage} используется, чтобы в теле определения был доступен \\.
\newcommand{\beginkey}[1]{ \begin{minipage}[b]{0.97\textwidth} \textbf{#1} }
\newcommand{\key}[1]{\end{minipage} \\[0.5em] \beginkey{#1}}
\newcommand{\firstkey}[1]{\key{#1}}

\RecustomVerbatimEnvironment
  {verbatim}{Verbatim}
  {frame=leftline, samepage=true}

% Для обратной совместимости.
\DefineVerbatimEnvironment
  {code}{Verbatim}
  {frame=leftline, samepage=true}

\newenvironment{operator}
  {\begin{description}}
  {\end{description} \bigskip}

\newcommand{\define}[2]{\item[{#1}] (#2) \\}

\newenvironment{methodlist}
  {}
  {}

\newcommand{\declare}[2]{\medskip\noindent\textbf{#1} \italy{#2} \\ \indent}

\newcommand{\twoless}{\textless\textless\-,\-,}
\newcommand{\twogreat}{\textgreater\textgreater\-,\-,}
\newcommand{\twominus}{\-/\-/}

